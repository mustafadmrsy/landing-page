                                // BaÅŸarÄ± mesajÄ± (opsiyonel)
                                console.log("TÃ¼m bildirimler temizlendi!");
                                
                                // Bildirimleri yeniden yÃ¼kle (sunucudan gÃ¼ncel durumu al)
                                checkNotificationsViaAjax();
