    <!-- Konsol bastÄ±rma (tÃ¼m console.* Ã§aÄŸrÄ±larÄ±nÄ± kapatÄ±r) -->
    <script>
        (function () {
            try {
                var noop = function () { };
                var methods = ['log','warn','error','info','debug','trace','group','groupCollapsed','groupEnd','table','time','timeEnd'];
                window.console = window.console || {};
                for (var i = 0; i < methods.length; i++) {
                    try { window.console[methods[i]] = noop; } catch (e) { }
                }
            } catch (e) { /* ignore */ }
        })();
    </script>
    
    <!-- Oturum yÃ¶netim scripti -->
    <script type="text/javascript">
        // Hata mesajlarÄ±nÄ± gizle
        $(document).ready(function() {
            // Oturum sÃ¼resi doldu mesajlarÄ±nÄ± gizle
            hideSessionMessages();
        });
        
        // Oturum mesajlarÄ±nÄ± gizlemek iÃ§in
        function hideSessionMessages() {
            // JavaScript alert'leri engelle
            var originalAlert = window.alert;
            window.alert = function(message) {
                if (message && typeof message === 'string' && 
                   (message.indexOf('Oturum sÃ¼reniz doldu') > -1 || 
                    message.indexOf('session') > -1 || 
                    message.indexOf('sÃ¼re') > -1)) {
                    console.log("Engellenen mesaj: " + message);
                    return;
                }
                originalAlert(message);
            };
            
            // Timeout veya session mesajÄ±nÄ± iÃ§eren tÃ¼m elementleri gizle
            setTimeout(function() {
                var allElements = document.querySelectorAll('*');
                for (var i = 0; i < allElements.length; i++) {
                    var element = allElements[i];
                    if (element.innerText && 
                       (element.innerText.indexOf('Oturum sÃ¼reniz doldu') > -1 || 
                        element.innerText.indexOf('tekrar giriÅŸ') > -1)) {
                        element.style.display = 'none';
                    }
                }
            }, 500);
        }
    </script>
    
